# Apache .htaccess file for S3 proxy and decrypt_image routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Route /s3proxy/ requests to s3proxy.php
    RewriteRule ^s3proxy/(.*)$ s3proxy.php [L,QSA]
    
    # Make decrypt_image.php accessible directly
    # This ensures it can be accessed via regular URL path
    RewriteCond %{REQUEST_URI} !^/backend/routes/decrypt_image\.php
    RewriteRule ^decrypt_image\.php$ backend/routes/decrypt_image.php [L,QSA]
</IfModule>

# Set appropriate MIME types
<IfModule mod_mime.c>
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
</IfModule>

# Enable CORS for image access
<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>
